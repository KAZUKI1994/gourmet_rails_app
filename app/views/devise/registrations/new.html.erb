<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, "メールアドレス", :class => "col-sm-2" %>
    <%= f.email_field :email, autofocus: true, :class => "col-sm-10" %>
  </div>

  <div class="form-group">
    <%= f.label :nickname, "ニックネーム", :class => "col-sm-2" %><br />
    <%= f.text_field :nickname, :class => "col-sm-10" %>
  </div>

  <div class="form-group">
    <%= f.label :college, "大学", :class => "col-sm-2" %>
    <%= f.text_field :college, :class => "col-sm-10" %>
  </div>
  
  <div class="form-group">
    <%= f.label :faculty, "学部", :class => "col-sm-2" %>
    <%= f.text_field :faculty, :class => "col-sm-10" %>
  </div>

  <div class="form-group">
    <%= f.label :grade, "学年", :class => "col-sm-2" %>
    <%= f.select :grade, [["1年生","1年生"], ["2年生","2年生"],["3年生","3年生"],["4年生","4年生"],["院1年生","院1年生"],["院2年生","院2年生"],["院3年生","院3年生"]], :class => "col-sm-10" %>
  </div>

  <div class="form-group">
    <%= f.label :gender, "性別", :class => "col-sm-2" %>
    <%= f.select :gender, [['男性', '男性'],['女性','女性']], :class => "col-sm-10"  %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em class="alert-info"><%= @minimum_password_length %> 文字以上のパスワードを設定してください。</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード（確認）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", :class => "btn btn-success" %>
  </div>
<% end %>


