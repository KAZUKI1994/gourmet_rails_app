<h3>管理ページ</h3>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4>管理メニュー</h4>
  </div>
  <ul class="list-group">
    <li class="list-group-item"><%= link_to "バナー管理ページへ", banners_path %></li>
    <li class="list-group-item"><%= link_to "クーポン管理ページへ", coupons_path %></li>
  </ul>
</div>

<h3>デート役立ち記事発行管理画面</h3>
<%= link_to '新規投稿', new_article_path, :class => "btn btn-success" %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4>掲載記事ー一覧</h4>
  </div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th width="30%">タイトル</th>
      <th width="40%">本文</th>
      <th width="10%">タグ</th>
      <th width="10%"></th>
    </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= link_to article.title, article_path(article.id) %></td>
          <td><%= truncate(article.body, :length=>60) %></td>
          <td><%= article.tag %></td>
          <td>
          <%= link_to '編集', edit_article_path(article), :class => 'btn btn-info' %>
          <%= link_to '削除', article, method: :delete, data: { confirm: '本当に削除しますか？'}, :class => 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>投稿記事一覧（最新順）</h4>
  </div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>レストラン名</th>
      <th>作成日</th>
      <th>アクション</th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
      <td><%= link_to post.titile, post_path(post.id) %></td>
      <td><%= truncate(post.content) %></td>
      <td><%= post.restaurant.name %></td>
      <td><%= post.updated_at %></td>
      <td><%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか？' }, :class => "btn btn-danger" %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>登録ユーザー一覧</h4>
  </div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>ニックネーム</th>
      <th>大学</th>
      <th>学部</th>
      <th>学年</th>
      <th>性別</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.nickname %></td>
      <td><%= user.college %></td>
      <td><%= user.faculty %></td>
      <td><%= user.grade %></td>
      <td><%= user.gender %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
