<%= form_for(@banner) do |f| %>
  <% if @banner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@banner.errors.count, "error") %> prohibited this banner from being saved:</h2>

      <ul>
      <% @banner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= field_set_tag "バナーを出稿する" do %>
    <%= f.fields_for :photo do |p| %>
      <div class="form-group">
        <%= p.label :images, "バナー画像", :class => "col-sm-2" %>
        <%= p.file_field :images, :class => "col-sm-4" %>
        <%= p.hidden_field :images_cache %> 
      </div>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :link, "リンク", :class => "col-sm-2" %>
    <%= f.text_field :link, :class => "col-sm-10" %>
  </div>
  <div class="form-group">
    <%= f.label :finish_time, "掲載終了予定日時", :class => "col-sm-4" %>
    <%= f.date_field :finish_time, :class => "col-sm-8" %>
  </div>
  <div class="actions">
    <%= f.submit "出稿する", :class => "btn btn-success", :confirm => "出稿するとすぐに反映されます。" %>
  </div>
<% end %>
